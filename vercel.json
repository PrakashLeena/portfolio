{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "build"
      }
    },
    {
      "src": "backend/backend/index.js",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/backend/index.js" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ],
  "env": {
    "NODE_ENV": "production",
    "REACT_APP_API_URL": "/api",
    "REACT_APP_ENVIRONMENT": "production"
  }
}